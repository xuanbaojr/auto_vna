<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MyASCS.Views.ResultWindow"
        Title="Employee Details"
        Width="900"
        Height="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Close Button and Dropdown -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <ComboBox Width="150" HorizontalAlignment="Right">
                <ComboBoxItem Content="Menu Label"/>
            </ComboBox>
            <Button Content="✖" Background="Transparent" Foreground="Black" BorderThickness="0"/>
        </StackPanel>
        
        <!-- Image Identification Section -->
        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Automatically Identification Images" FontWeight="Bold"/>
            <WrapPanel>
                <StackPanel Margin="5" Width="100" Height="100" Background="#EAEAEA"/>
                <StackPanel Margin="5" Width="100" Height="100" Background="#EAEAEA"/>
                <StackPanel Margin="5" Width="100" Height="100" Background="#EAEAEA"/>
                <StackPanel Margin="5" Width="100" Height="100" Background="#EAEAEA"/>
            </WrapPanel>
        </StackPanel>
        
        <!-- Employee Info and Session List -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Employee Information" FontWeight="Bold"/>
                <Border BorderThickness="1" CornerRadius="5" Background="#F5F5F5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Name: LUU TU QUYNH" FontWeight="Bold"/>
                        <TextBlock Text="Gender: Female" FontWeight="Bold"/>
                        <TextBlock Text="Name Tag: Available"/>
                        <TextBlock Text="Shirt: Female T1 - Classic"/>
                        <TextBlock Text="Pant: Not Available"/>
                        <TextBlock Text="Eyeglasses: Not Available"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Session List" FontWeight="Bold"/>
                <Border BorderThickness="1" CornerRadius="5" Background="#F5F5F5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="• Lorem Ipsum is simply dummy text of the printing industry."/>
                        <TextBlock Text="• Lorem Ipsum is simply dummy text of the printing industry."/>
                        <TextBlock Text="• Lorem Ipsum is simply dummy text of the printing industry."/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
